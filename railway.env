# Variables de entorno para Railway
APP_NAME=VASIR
APP_ENV=production
APP_DEBUG=false
APP_URL=${{ RAILWAY_PUBLIC_URL }}

# Base de datos - Railway inyectará estas automáticamente
DB_CONNECTION=mysql
DB_HOST=${{ MYSQLHOST }}
DB_PORT=${{ MYSQLPORT }}
DB_DATABASE=${{ MYSQLDATABASE }}
DB_USERNAME=${{ MYSQLUSER }}
DB_PASSWORD=${{ MYSQLPASSWORD }}

# Session y cache
SESSION_DRIVER=database
CACHE_STORE=database
QUEUE_CONNECTION=database

# Mail (configurar según necesites)
MAIL_MAILER=log

# Sanctum
SANCTUM_STATEFUL_DOMAINS=${{ RAILWAY_PUBLIC_URL }}

# Laravel
APP_LOCALE=es
APP_FALLBACK_LOCALE=es

# Ejecutar migraciones automáticamente
RUN_MIGRATIONS=true
